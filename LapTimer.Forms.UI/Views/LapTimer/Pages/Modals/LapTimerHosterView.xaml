<?xml version="1.0" encoding="UTF-8"?>
<views:MvxContentPage xmlns="http://xamarin.com/schemas/2014/forms"
                      xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                      xmlns:viewModels="clr-namespace:LapTimer.Forms.UI.ViewModels"
                      xmlns:local="clr-namespace:LapTimer.Forms.UI.Views.LapTimer"
                      xmlns:views="clr-namespace:MvvmCross.Forms.Views;assembly=MvvmCross.Forms"
                      xmlns:tab="clr-namespace:Xam.Plugin.TabView;assembly=Xam.Plugin.TabView"
                      xmlns:material="clr-namespace:XF.Material.Forms.UI;assembly=XF.Material"
                      x:Class="LapTimer.Forms.UI.Views.LapTimer.LapTimerHosterView"
                      NavigationPage.HasNavigationBar="False"
                      x:TypeArguments="viewModels:LapTimer.LapTimerHosterViewModel">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--Cancel-->
        <material:MaterialIconButton Grid.Row="0"
                                     HorizontalOptions="Start"
                                     Image="close"
                                     BackgroundColor="Transparent"
                                     Command="{Binding CloseSiteCommand}">
        </material:MaterialIconButton>

        <!--Route view-->
        <local:RouteView Grid.Row="1" />

        <BoxView Color="{DynamicResource MaterialDesignDivider}"
                 HeightRequest="2"
                 Grid.Row="2"
                 HorizontalOptions="Fill"
                 Margin="5, 0, 5, 0" />

        <!--swipable views-->
        <tab:TabViewControl Grid.Row="3"
                            IsSwipeEnabled="False"
                            SelectedTabIndex="{Binding SelectedTabIndex}">
            <tab:TabViewControl.ItemSource>
                <tab:TabItem>
                    <local:DriveInView />
                </tab:TabItem>
                <tab:TabItem>
                    <local:StartingPositionView />
                </tab:TabItem>
                <tab:TabItem>
                    <local:CountdownView />
                </tab:TabItem>
                <tab:TabItem>
                    <local:LapTimerView />
                </tab:TabItem>
            </tab:TabViewControl.ItemSource>
        </tab:TabViewControl>
    </Grid>
</views:MvxContentPage>
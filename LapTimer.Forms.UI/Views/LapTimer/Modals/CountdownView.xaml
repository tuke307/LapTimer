<?xml version="1.0" encoding="UTF-8"?>
<views:MvxContentPage xmlns="http://xamarin.com/schemas/2014/forms"
                      xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                      xmlns:res="clr-namespace:LapTimer.Forms.UI.Resx"
                      xmlns:views="clr-namespace:MvvmCross.Forms.Views;assembly=MvvmCross.Forms"
                      xmlns:material="clr-namespace:XF.Material.Forms.UI;assembly=XF.Material"
                      x:Class="LapTimer.Forms.UI.Views.LapTimer.CountdownView">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <material:MaterialLabel TypeScale="H2"
                                Grid.Row="0"
                                Text="{Binding Countdown}"
                                VerticalOptions="Center"
                                HorizontalOptions="Center" />

        <material:MaterialIconButton Grid.Row="1"
                                     HorizontalOptions="Start"
                                     Image="restore"
                                     Command="{Binding ResetCommand}">
        </material:MaterialIconButton>
    </Grid>
</views:MvxContentPage>